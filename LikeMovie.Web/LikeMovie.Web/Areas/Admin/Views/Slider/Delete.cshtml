@model LikeMovies.Models.PosterMovie

@{
    ViewBag.Title = "Delete Slider";
}

<h2>Delete Slider</h2>

<h3>Are you sure you want to delete this slider?</h3>

<div>
    @if (Model.Movies != null)
    {
        <h4>@Model.Movies.Title</h4>
    }
    else
    {
        <h4>Movie not found</h4>
    }

    <p>Poster: <img src="@Url.Content(Model.PosterURL)" style="width:100px;height:auto;" /></p>
    <p>Order: @Model.SliderOrder</p>
</div>

<!-- Form to delete directly without confirmation -->
@using (Html.BeginForm("Delete", "Slider", new { area = "Admin", id = Model.PosterID }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a href="@Url.Action("Index", "Slider", new { area = "Admin" })" class="btn btn-secondary">Cancel</a>
}

