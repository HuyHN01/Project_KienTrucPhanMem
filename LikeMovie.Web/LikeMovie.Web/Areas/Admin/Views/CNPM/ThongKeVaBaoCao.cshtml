@{
    ViewBag.Title = "ThongKeVaBaoCao";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container" style="margin-top: 20px;">
    <h2 class="text-center" style="margin-bottom: 30px; font-weight: bold; color: #ffcc00;">
        Thống kê và Báo cáo
    </h2>

    <!-- Add Filter Section -->
    <div style="margin-bottom: 20px; display: flex; justify-content: center;">
        <button class="btn btn-primary" style="margin-right: 10px;">Xem thống kê</button>
        <button class="btn btn-success">Xuất báo cáo</button>
    </div>

    <!-- Table for Statistics -->
    <div class="table-responsive">
        <table class="table table-hover table-bordered text-center" style="color: white;">
            <thead style="background-color: #222; color: #ffcc00;">
                <tr>
                    <th>STT</th>
                    <th>Tên báo cáo</th>
                    <th>Thời gian</th>
                    <th>Lượt xem</th>
                    <th>Độ phổ biến</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Thống kê lượt xem phim tháng 1</td>
                    <td>01/2024</td>
                    <td>15,000</td>
                    <td><span class="badge badge-success">Rất phổ biến</span></td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Thống kê người dùng mới</td>
                    <td>01/2024</td>
                    <td>1,200</td>
                    <td><span class="badge badge-info">Ổn định</span></td>
                </tr>
                <tr>
                    <td>3</td>
                    <td>Báo cáo phim ít lượt xem</td>
                    <td>12/2023</td>
                    <td>300</td>
                    <td><span class="badge badge-danger">Không phổ biến</span></td>
                </tr>
                <tr>
                    <td>4</td>
                    <td>Thống kê lượt xem theo thể loại</td>
                    <td>01/2024</td>
                    <td>10,500</td>
                    <td><span class="badge badge-success">Phổ biến</span></td>
                </tr>
                <tr>
                    <td>5</td>
                    <td>Báo cáo hành vi người dùng</td>
                    <td>01/2024</td>
                    <td>-</td>
                    <td><span class="badge badge-warning">Cần xem xét</span></td>
                </tr>
                <tr>
                    <td>6</td>
                    <td>Top 10 bộ phim hot nhất</td>
                    <td>01/2024</td>
                    <td>50,000</td>
                    <td><span class="badge badge-success">Rất phổ biến</span></td>
                </tr>
                <tr>
                    <td>7</td>
                    <td>Báo cáo người dùng rời bỏ</td>
                    <td>12/2023</td>
                    <td>-</td>
                    <td><span class="badge badge-danger">Cảnh báo</span></td>
                </tr>
                <tr>
                    <td>8</td>
                    <td>Thống kê tổng doanh thu</td>
                    <td>01/2024</td>
                    <td>1,200,000$</td>
                    <td><span class="badge badge-success">Tăng trưởng</span></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<!-- Custom Styles -->
<style>
    body {
        background-color: #111;
        color: white;
        font-family: 'Arial', sans-serif;
    }

    h2 {
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    }

    .table {
        background-color: #222;
        border-color: #444;
    }

    .table th, .table td {
        padding: 12px;
        vertical-align: middle;
    }

    .table-hover tbody tr:hover {
        background-color: #333;
    }

    .badge {
        padding: 5px 10px;
        border-radius: 5px;
    }

    .badge-success {
        background-color: #28a745;
        color: #fff;
    }

    .badge-danger {
        background-color: #dc3545;
        color: #fff;
    }

    .badge-info {
        background-color: #17a2b8;
        color: #fff;
    }

    .badge-warning {
        background-color: #ffc107;
        color: #333;
    }

    .btn {
        font-weight: bold;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
    }

    .table-responsive {
        border: 1px solid #444;
        border-radius: 10px;
        overflow: hidden;
    }
</style>
