@{
    ViewBag.Title = "Thanh Toán";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    var selectedPlan = ViewBag.SelectedPlan as LikeMovies.Models.SubscriptionPlans;
}

<div class="container">
    <h2>Thanh Toán</h2>

    <h3>Gói Đăng ký: @selectedPlan.PlanName</h3>
    <p>Giá: @selectedPlan.Price.ToString("C")</p>

    @using (Html.BeginForm("ThanhToan", "MuaVip", FormMethod.Post))
    {
        @Html.Hidden("PlanID", selectedPlan.PlanID)

        <div>
            <label>Thời lượng đăng ký (tháng):</label><br />
            <div class="radio-label">
                <input type="radio" name="SubscriptionDuration" value="1" id="duration1" checked />
                <label for="duration1">1 Tháng</label>
            </div>
            <div class="radio-label">
                <input type="radio" name="SubscriptionDuration" value="3" id="duration3" />
                <label for="duration3">3 Tháng</label>
            </div>
            <div class="radio-label">
                <input type="radio" name="SubscriptionDuration" value="6" id="duration6" />
                <label for="duration6">6 Tháng</label>
            </div>
            <div class="radio-label">
                <input type="radio" name="SubscriptionDuration" value="12" id="duration12" />
                <label for="duration12">12 Tháng</label>
            </div>
        </div>

        <div>
            <label>Phương thức thanh toán:</label><br />
            <div class="radio-label">
                <input type="radio" name="thanhtoan" value="1" id="vnpay" checked />
                <label for="vnpay"><img src="~/Images/NganHangIcon/VNPAY-QR.png" alt="VNPAY" /> VNPAY</label>
            </div>
            <div class="radio-label">
                <input type="radio" name="thanhtoan" value="2" id="momo" />
                <label for="momo"><img src="~/Images/NganHangIcon/Momo.png" alt="MoMo" /> MoMo</label>
            </div>
            <div class="radio-label">
                <input type="radio" name="thanhtoan" value="3" id="zalopay" />
                <label for="zalopay"><img src="~/Images/NganHangIcon/ZaloPay.png" alt="ZaloPay" /> ZaloPay</label>
            </div>
            <div class="radio-label">
                <input type="radio" name="thanhtoan" value="4" id="shopeepay" />
                <label for="shopeepay"><img src="~/Images/NganHangIcon/SHoppeepay.png" alt="ShopeePay" /> ShopeePay</label>
            </div>
        </div>

        <button type="submit">Xác nhận thanh toán</button>

        }
</div>
<style>
    body {
        font-family: 'Times New Roman';
        background-color: #121212; /* Black background */
        color: #ffffff; /* White text */
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
        background-color: #1e1e1e; /* Darker grey background for container */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5); /* Adjusted shadow for dark theme */
        border-radius: 8px;
    }

    h2 {
        text-align: center;
        color: #ffffff; /* White text */
    }

    h3 {
        color: #FFA500; /* Orange color to highlight the selected plan */
        text-align: center;
    }

    p {
        text-align: center;
        font-size: 1.2em;
    }

    form {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    label {
        font-size: 1em;
        margin-bottom: 5px;
        color: #ffffff;
    }

    input[type="number"],
    input[type="radio"] {
        padding: 10px;
        border: 1px solid #444;
        border-radius: 4px;
        background-color: #2a2a2a;
        color: #ffffff;
    }

        input[type="number"]:focus,
        input[type="radio"]:focus {
            outline: none;
            border-color: #FFA500; /* Orange border on focus */
        }

    button {
        padding: 15px 20px;
        background-color: #FFA500; /* Orange background */
        border: none;
        border-radius: 5px;
        color: white;
        font-size: 1em;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        button:hover {
            background-color: #FF8C00; /* Slightly darker orange on hover */
        }

    .radio-label {
        display: flex;
        align-items: center;
    }

        .radio-label input {
            margin-right: 10px;
        }

        .radio-label img {
            width: 24px; /* Adjust the size as needed */
            height: auto;
            margin-right: 10px;
        }
</style>
