@model IEnumerable<LikeMovies.Models.SubscriptionPlanViewModel>

@{
    ViewBag.Title = "Mua VIP";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container">
    <h2>Mua VIP</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Tên Gói</th>
                <th>Giá</th>
                <th>Giới hạn thiết bị</th>
                <th>Ad Free</th>
                <th>Quyền truy cập nội dung VIP</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var plan in Model)
            {
                <tr>
                    <td>@plan.PlanName</td>
                    <td>@plan.Price.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</td>
                    <td>@plan.DevicesLimit</td>
                    <td>@(plan.AdFree ? "Có" : "Không")</td>
                    <td>@(plan.VipContentAccess ? "Có" : "Không")</td>
                    <td>
                        <a href="@Url.Action("ThanhToan", new { id = plan.planID })" class="btn-select">Chọn</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    body {
        font-family: "Times New Roman", Times, serif; 
        background-color: #121212; 
        color: #ffffff; 
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
        background-color: #1e1e1e; 
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5); 
        border-radius: 8px;
    }

    h2 {
        text-align: center;
        color: #FFA500; 
    }

    h3 {
        color: #FFA500; 
        text-align: center;
    }

    p {
        text-align: center;
        font-size: 1.2em;
    }

    form {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }
    .table thead tr th{
        color:whitesmoke;
    }
    .table tbody td{
       color:whitesmoke;
    }
    label {
        font-size: 1em;
        margin-bottom: 5px;
        color: #ffffff;
    }

    input[type="number"],
    input[type="radio"] {
        padding: 10px;
        border: 1px solid #FFA500; 
        border-radius: 4px;
        background-color: #2a2a2a;
        color: #ffffff;
    }

        input[type="number"]:focus,
        input[type="radio"]:focus {
            outline: none;
            border-color: #FFA500;
        }

    button,
    .btn-select {
        padding: 15px 20px;
        background-color: #FFA500;
        border: none;
        border-radius: 5px;
        color: white; 
        font-size: 1em;
        cursor: pointer;
        transition: background-color 0.3s ease;
        font-family: "Times New Roman", Times, serif;
        text-decoration: none;
        display: inline-block;
        text-align: center;
    }

        button:hover,
        .btn-select:hover {
            background-color: #FF8C00;
        }

    .radio-label {
        display: flex;
        align-items: center;
    }

        .radio-label input {
            margin-right: 10px;
        }

</style>