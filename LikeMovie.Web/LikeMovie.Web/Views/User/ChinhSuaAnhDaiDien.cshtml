@{
    ViewBag.Title = "Chỉnh sửa ảnh đại diện";
}

<h2>Chỉnh sửa ảnh đại diện</h2>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="avatar">Chọn ảnh đại diện mới:</label>
        <input type="file" id="avatar" name="avatar" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật ảnh đại diện</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info mt-3">
        @ViewBag.Message
    </div>
}