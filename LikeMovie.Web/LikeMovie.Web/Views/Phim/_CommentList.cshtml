@model IEnumerable<LikeMovies.Models.Comments>

@foreach (var comment in Model)
{
    <div class="d-flex mb-3">
        <img src="@Url.Content(comment.Users.AvatarURL)" alt="Avatar" class="rounded-circle me-3" style="width: 50px; height: 50px;">
        <div class="comment-content bg-secondary p-3 rounded w-100">
            <div class="d-flex justify-content-between align-items-center">
                <h6 class="text-light mb-0">
                    @comment.Users.UserName <small class="text-muted">- @comment.DateCreated</small>
                </h6>
                <div class="star-rating d-flex align-items-center">
                    @{
                        var rating = comment.Rating; // Lấy số sao từ Comments
                    }
                    @for (int i = 5; i >= 1; i--)
                    {
                        <input type="radio" name="rating-@comment.CommentID" id="rating-@i-@comment.CommentID" disabled @(i == rating ? "checked" : "")>
                        <label for="rating-@i-@comment.CommentID" class="star">&#9733;</label>
                    }
                </div>
            </div>
            <p class="text-light mb-2">@comment.CommentText</p>
            <div class="d-flex justify-content-between">
                <button class="btn btn-outline-light btn-sm">Like (<span>@comment.Likes</span>)</button>
                <button class="btn btn-outline-light btn-sm">Trả lời</button>
            </div>
        </div>
    </div>
}